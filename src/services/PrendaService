import axios from 'axios';

const API_URL = 'http://localhost:8080/api/prendas';

const obtenerPrendas = () => {
  return axios.get(API_URL);
};

const obtenerPrendaPorId = (id) => {
  return axios.get(`${API_URL}/${id}`);
};

const crearPrenda = (prenda) => {
  return axios.post(API_URL, prenda);
};

const actualizarPrenda = (id, prenda) => {
  return axios.put(`${API_URL}/${id}`, prenda);
};

const eliminarPrenda = (id) => {
  return axios.delete(`${API_URL}/${id}`);
};

export default {
  obtenerPrendas,
  obtenerPrendaPorId,
  crearPrenda,
  actualizarPrenda,
  eliminarPrenda
};
